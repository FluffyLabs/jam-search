{
  "name": "matrix-azure-search",
  "version": "1.0.0",
  "description": "Application for retrieving news from Matrix and indexing in Azure Cognitive Search",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "biome format --write",
    "lint": "biome lint --write; biome check --write",
    "qa": "biome ci",
    "qa-fix": "npm run format; npm run lint",
    "start": "tsx ./src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "matrix-js-sdk": "^37.3.0",
    "pg": "^8.14.1",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^16.11.17",
    "tsx": "^4.19.3",
    "typescript": "^4.5.5"
  }
}
