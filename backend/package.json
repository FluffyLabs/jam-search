{
  "name": "matrix-azure-search",
  "version": "1.0.0",
  "description": "Application for retrieving news from Matrix and indexing in Azure Cognitive Search",
  "main": "dist/index.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "tsc",
    "format": "biome format --write",
    "lint": "biome lint --write; biome check --write",
    "qa": "biome ci",
    "qa-fix": "npm run format; npm run lint",
    "start": "tsx ./src/index.ts",
    "dev": "tsx watch ./src/index.ts",
    "db:push": "drizzle-kit push --verbose --strict",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "hono": "^4.7.7",
    "matrix-js-sdk": "^37.3.0",
    "postgres": "^3.4.5",
    "tsx": "^4.19.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.14.1",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "type": "module"
}
